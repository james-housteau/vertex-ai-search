# Load Tester Development Environment Configuration
# This file is automatically loaded by direnv when entering the directory

# Python environment settings
export PYTHONPATH="${PWD}/src:${PYTHONPATH}"
export PYTHONDONTWRITEBYTECODE=1
export PYTHONUNBUFFERED=1

# Poetry settings
export POETRY_VENV_IN_PROJECT=1
export POETRY_CACHE_DIR="${PWD}/.poetry-cache"

# pytest settings
export PYTEST_CURRENT_TEST=""
export PYTEST_DISABLE_PLUGIN_AUTOLOAD=1

# Development settings
export LOAD_TESTER_ENV=development
export LOAD_TESTER_LOG_LEVEL=DEBUG

# Testing settings
export LOAD_TESTER_TEST_PROJECT_ID=test-project
export LOAD_TESTER_TEST_DATASTORE_ID=test-datastore

# Load testing defaults
export LOAD_TESTER_DEFAULT_CONCURRENT_USERS=5
export LOAD_TESTER_DEFAULT_DURATION_SECONDS=10
export LOAD_TESTER_DEFAULT_RAMP_UP_SECONDS=2

echo "üß™ Load Tester development environment activated"
echo "üìÅ Python path: ${PYTHONPATH}"
echo "üêç Using Poetry for dependency management"
